<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationViewIndicatorStyle" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="background">@color/colorPrimary</item>
        <item name="itemVerticalPadding">30dp</item>
        <item name="itemBackground">@drawable/bottom_nav_background</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="Widget.Theme.AssetExDemo1.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/rounded_card_small_radius_gray</item>
    </style>
</resources>